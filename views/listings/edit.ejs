

<body>
    <% layout("/layouts/boilerplate") %>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit The Listing</h3>
                <form method="POST" action="/listing/<%=listings._id %>?_method=PUT" novalidate class="needs-validation"enctype="multipart/form-data" >
                    
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="title" value="<%=listings.title %>" type="text" class="form-control"required>
                        <div class="valid-feedback">Title looks good</div>
                        <div class="invalid-feedback">Enter valid Title</div>
                    
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" value="Enter description" type="text"
                            class="form-control"required><%=listings.description %></textarea>
                            <div class="valid-feedback">Description looks good</div>
                            <div class="invalid-feedback">Enter valid description</div>
                    </div>

                    
                    <div class="mt-3 mb-3">
                        <img src="<%=listings.image %>" alt="listing image" style="height:13rem ;width:15rem; border-radius:10px">
                    </div>

                    <div class="mb-3 ">
                        <label for="image" class="form-label">Image URL/Link</label>
                        <input name="image" type="file" class="form-control">
                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="price" value="<%=listings.price %>" type="number" class="form-control"required>

                            <div class="invalid-feedback">Enter valid price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="country" value="<%=listings.country %>" type="text" class="form-control"required>

                            <div class="invalid-feedback">Enter valid Country</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input name="location" value="<%=listings.location %>" type="text" class="form-control"required>
                        <div class="invalid-feedback">Enter valid Location</div>
                    </div>

                    <button class="btn btn-danger edit-btn mt-3 mb-2">Edit</button>
                </form>
            </div>
        </div>

</body>

